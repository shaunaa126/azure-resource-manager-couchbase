{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "nodeCount": {
      "type": "int"
    },
    "vmSize": {
      "type": "string"
    },
    "adminUsername": {
      "type": "string"
    },
    "adminPassword": {
      "type": "securestring"
    },
    "extensionUrl": {
      "type": "string"
    },
    "uniqueString": {
      "type": "string"
    },
    "vaultName": {
      "type": "string"
    },
    "vaultResourceGroup": {
      "type": "string"
    },
    "httpssecretUrlWithVersion": {
      "type": "string"
    },
    "httpssecretCaUrlWithVersion": {
      "type": "string"
    },
    "certThumbPrint": {
      "type": "string"
    },
    "caCertThumbPrint": {
      "type": "string"
    }
  },
  "variables": {},
  "resources": [
    {
      "type": "Microsoft.Compute/virtualMachineScaleSets",
      "name": "syncgateway",
      "location": "[resourceGroup().location]",
      "apiVersion": "2017-03-30",
      "plan": {
        "publisher": "couchbase",
        "product": "couchbase-sync-gateway-enterprise",
        "name": "byol"
      },
      "sku": {
        "name": "[parameters('vmSize')]",
        "tier": "Standard",
        "capacity": "[parameters('nodeCount')]"
      },
      "properties": {
        "overprovision": false,
        "upgradePolicy": {
          "mode": "Manual"
        },
        "virtualMachineProfile": {
          "storageProfile": {
            "osDisk": {
              "createOption": "FromImage"
            },
            "imageReference": {
              "publisher": "couchbase",
              "offer": "couchbase-sync-gateway-enterprise",
              "sku": "byol",
              "version": "latest"
            }
          },
          "osProfile": {
            "computerNamePrefix": "vm",
            "adminUsername": "[parameters('adminUsername')]",
            "adminPassword": "[parameters('adminPassword')]",
            "secrets": [
              {
                "sourceVault": {
                  "id": "[resourceId(parameters('vaultResourceGroup'), 'Microsoft.KeyVault/vaults', parameters('vaultName'))]"
                },
                "vaultCertificates": [
                  {
                    "certificateUrl": "[parameters('httpssecretUrlWithVersion')]"
                  }
                ]
              }
            ]
          },
          "networkProfile": {
            "networkInterfaceConfigurations": [
              {
                "name": "nic",
                "properties": {
                  "primary": "true",
                  "ipConfigurations": [
                    {
                      "name": "ipconfig",
                      "properties": {
                        "subnet": {
                          "id": "[concat(resourceId('Microsoft.Network/virtualNetworks/', 'vnet'), '/subnets/subnet')]"
                        },
                        "ApplicationGatewayBackendAddressPools": [
                          {
                            "id": "[concat('/subscriptions/', subscription().subscriptionId,'/resourceGroups/', resourceGroup().name, '/providers/Microsoft.Network/applicationGateways/', 'syncgateway_appgw', '/backendAddressPools/', 'appGwBackendPool')]"
                          }
                        ],
                        "publicipaddressconfiguration": {
                          "name": "public",
                          "properties": {
                            "idleTimeoutInMinutes": 15,
                            "dnsSettings": {
                              "domainNameLabel": "[concat('syncgateway-', parameters('uniqueString'))]"
                            }
                          }
                        }
                      }
                    }
                  ]
                }
              }
            ]
          },
          "extensionProfile": {
            "extensions": [
              {
                "name": "extension",
                "properties": {
                  "publisher": "Microsoft.Azure.Extensions",
                  "type": "CustomScript",
                  "typeHandlerVersion": "2.0",
                  "autoUpgradeMinorVersion": true,
                  "settings": {
                    "fileUris": [
                      "[concat(parameters('extensionUrl'), 'adjust_tcp_keepalive.sh')]",
                      "[concat(parameters('extensionUrl'), 'installSyncGateway.sh')]",
                      "[concat(parameters('extensionUrl'), 'configureSyncGateway.sh')]",
                      "[concat(parameters('extensionUrl'), 'syncGateway.sh')]"
                    ],
                    "commandToExecute": "[concat('bash syncGateway.sh ', parameters('adminUsername'), ' ', parameters('adminPassword'), ' ', parameters('uniqueString'), ' ', resourceGroup().location, ' ', parameters('certThumbPrint'))]"
                  }
                }
              }
            ]
          }
        }
      }
    }
  ]
}
